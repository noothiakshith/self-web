datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

generator client {
  provider = "prisma-client-js"
}

model File {
  id          String   @id @default(uuid())
  name        String
  size        Int
  type        String
  content     Bytes    // Store file content directly in the database
  uploadDate  DateTime @default(now())
  downloads   Int      @default(0)
}

model Settings {
  id       String @id @default("upload-settings")
  password String
}
